<!-- views/sections/contacts.ejs -->

<%- include('../includes/head.ejs') %>

<body>
    <!-- Navigation Bar -->
    <%- include('../includes/navbar.ejs') %>

    <!-- Page Content -->
    <section>
        <div class="container mt-5 pt-3">
            <div class="card p-3">
                <h3 class="card-title">CONTACT US</h3>        
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="card" style="height: 400px;">
                            <div class="card-body">
                                <div id="map" style="height: 100%;"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="card" style="height: 400px;">
                            <div class="card-body">
                                <h5 class="card-title">INQUIRE ONLINE</h5>
                                <p class="card-text">
                                    <form action="">
                                        <input type="text" class="form-control mb-3" placeholder="Company Name" required>
                                        <input type="text" class="form-control mb-3" placeholder="Address" required>
                                        <input type="text" class="form-control mb-3" placeholder="Contact Person" required>
                                        <input type="text" class="form-control mb-3" placeholder="Contact Number" required>
                                        <input type="text" class="form-control mb-3" placeholder="Email address" required>
                                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                                    </form>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../includes/footer.ejs') %>
    <script>
        function initMap() {
            // Set a static default location
            const defaultLocation = { lat: 15.100676369593167, lng: 120.95123625210036 };
            const satelliteOfficeLocation = { lat: 14.704859968437365, lng: 120.98904600992707 };
            
            // Initialize the map
            const map = new google.maps.Map(document.getElementById('map'), {
                center: defaultLocation,
                zoom: 8,
            });
    
            // Add a company marker with red color
            const companyLocation = defaultLocation;
            const companyMarker = new google.maps.Marker({
                position: companyLocation,
                map: map,
                label: 'A', // Label for the marker
                title: 'MAIN OFFICE',
                icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    fillColor: 'red',
                    fillOpacity: 1,
                    strokeWeight: 0,
                    scale: 10,
                },
            });
    
            // Create an InfoWindow for the company marker
            const companyWindow = new google.maps.InfoWindow({
                content: 'MAIN OFFICE', // Content inside the InfoWindow
            });
    
            // Add a company marker with red color
            const satelliteOfficeMarker = new google.maps.Marker({
                position: satelliteOfficeLocation,
                map: map,
                label: 'B', // Label for the marker
                title: 'SATELLITE OFFICE',
                icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    fillColor: 'red',
                    fillOpacity: 1,
                    strokeWeight: 0,
                    scale: 10,
                },
            });
    
            // Create an InfoWindow for the company marker
            const satelliteOfficeWindow = new google.maps.InfoWindow({
                content: 'SATELLITE OFFICE', // Content inside the InfoWindow
            });

            companyWindow.open(map, companyMarker);
            satelliteOfficeWindow.open(map, satelliteOfficeMarker);
        }
        window.onload = initMap;
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= apiKey %>&callback=initMap" async defer></script>
    <%- include('../includes/scripts.ejs') %>
</body>
</html>
